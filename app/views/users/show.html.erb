<div class= "container">
    <div class="row">
        <div class="col-md-3 text-center">
            <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
        </div>
        <div class="col-md-6">
            <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
            <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
            <br/>
            <br/>
            <div class="well profile-block profile-description">
                <h2>Description</h2>
                <p><%= @user.profile.description %><p>
            </div>
            
            <div>
                <% if true # current_user.plan_id == 2 %>
                    <div class="well profile-block profile-contact-info">
                        <h2>Contact Information</h2>
                        <h4>Phone Number: <%= @user.profile.phone_number %></h4>
                        <h4>Contact Email: <%= @user.profile.contact_email %></h4>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>